{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "declaration": false,
    "newLine": "lf",
    "outDir": "dist/lib"
  },
  "compileOnSave": false,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules", "test/**/*"
  ]
}
