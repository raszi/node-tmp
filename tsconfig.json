{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": false,
    "inlineSources": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "newLine": "lf",
    "declaration": false
  },
  "compileOnSave": false,
  "include": [
    "src/**/*", "test/**/*"
  ]
}
